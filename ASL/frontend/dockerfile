# Use official Node.js LTS version
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy rest of the code
COPY . .

# Build the app (if itâ€™s a React app)
RUN npm run build

# Expose Cloud Run PORT
ENV PORT=3000

# Serve the app
CMD ["npm", "start"]